@model WebBanHangOnline.Models.EF.Order
@using WebBanHangOnline.Common;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    ViewBag.count = 1;
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết đơn hàng</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card" style="background-color: #f0f0f0; border: 1px solid #ccc;">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="form-group" style="background-color:antiquewhite;">
                <label> Mã đơn hàng</label>
                <p class="form-control">@Model.Code</p>
            </div>
            <div class="form-group" style="background-color:lightblue;">
                <label> Tên Khách hàng</label>
                <p class="form-control">@Model.CustomerName</p>
            </div>
            <div class="form-group" style="background-color: lightblue;">
                <label> Số điện thoại</label>
                <p class="form-control">@Model.Phone</p>
            </div>
            <div class="form-group" style="background-color: lightblue;">
                <label> Email</label>
                <p class="form-control">@Model.Email</p>
            </div>
            <div class="form-group" style="background-color: lightblue;">
                <label> Tổng tiền</label>
                <p class="form-control">@Common.FormatNumber(Model.TotalAmount, 0) đ</p>
            </div>
            <div class="form-group" style="background-color: lightblue;">
                <label> Ngày tạo</label>
                <p class="form-control">@Model.CreateDate</p>
            </div>
            <div class="form-group" style="background-color: lightblue  ;">
                <label> Trạng thái</label>
                <p class="form-control">@(Model.Typepayment==0?"Chưa thanh toán":"Đã thanh toán")</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h1 style="text-align:center;">Thông tin danh sách sản phẩm</h1>
            </div>
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>detail</th> 
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach ( var item in Model.OrderDetails)
            {

                <tr>
                    <td>@ViewBag.count</td>
                    <td><img src="~/Common/Imageqrcode/qrCodeImage@(ViewBag.count-1).png"/ style="width:50px;height:50px;"></td>
                    <td>@item.Product.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@Common.FormatNumber((item.Price*item.Quantity),0)</td>
                </tr>
                ViewBag.count++;
            }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
